<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/profileAdressContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:contentPadding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/linearLayout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Adres Başlığı - "
                       android:textColor="@color/darkGray"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/profileAdressName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       tools:text="Adres Adı" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="6dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="İl - "
                       android:textColor="@color/darkGray"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/profileCity"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       tools:text="İl/İlçe" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="6dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Adres - "
                       android:textColor="@color/darkGray"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/profileAdress"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       tools:text="Adres Adres Adres Adres Adres Adres Adres Adres" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="6dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Numara - "
                       android:textColor="@color/darkGray"
                       android:textSize="16sp" />

                   <TextView
                       android:id="@+id/profileNumber"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       tools:text="(123) 4567890" />
               </LinearLayout>
           </LinearLayout>

           <ImageButton
               android:id="@+id/deleteButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#00000000"
               android:src="@drawable/ic_baseline_delete"
               app:layout_constraintEnd_toEndOf="@+id/linearLayout"
               app:layout_constraintTop_toTopOf="parent" />
       </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>