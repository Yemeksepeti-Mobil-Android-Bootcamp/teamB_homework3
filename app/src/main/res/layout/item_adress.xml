<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/profileAdressContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/profileAdressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Adres Adı"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profileCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="İl/İlçe"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profileNameAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="İsim Soyisim"
            android:textSize="16sp"
            android:textColor="#808080" />
        <TextView
            android:id="@+id/profileAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Adres Adres Adres Adres Adres Adres Adres Adres"
            android:textSize="16sp"
            android:textColor="#808080" />
        <TextView
            android:id="@+id/profileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(123) 4567890"
            android:textSize="16sp"
            android:textColor="#808080" />
    </LinearLayout>
</androidx.cardview.widget.CardView>